<Project Sdk="Microsoft.NET.Sdk">
    <ItemGroup>
        <PackageReference Include="FluentAssertions"/>
        <PackageReference Include="Microsoft.NET.Test.Sdk"/>
        <PackageReference Include="xunit"/>
        <PackageReference Include="xunit.runner.visualstudio">
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\DragaliaAPI.Shared\DragaliaAPI.Shared.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <MasterAssetMsgpackFiles Include="..\DragaliaAPI.Shared\**\*.msgpack"/>
    </ItemGroup>

    <Target Name="CopyMsgpackFilesForTests"
            AfterTargets="Build"
            Inputs="@(MasterAssetMsgpackFiles)"
            Outputs="@(MasterAssetMsgpackFiles->'$(OutDir)Resources\%(RecursiveDir)%(Filename).msgpack')"
    >
        <Copy SourceFiles="@(MasterAssetMsgpackFiles)" DestinationFiles="@(MasterAssetMsgpackFiles->'$(OutDir)Resources\%(RecursiveDir)%(Filename).msgpack')"/>
    </Target>

</Project>
