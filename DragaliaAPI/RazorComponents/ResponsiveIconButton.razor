<MudHidden Breakpoint="Breakpoint.SmAndDown" Invert=true>
    <MudIconButton Color="@Color" Class="@Class" Icon="@Icon" Size="@Size" Variant="Variant.Filled" Href="@Href" />
</MudHidden>
<MudHidden Breakpoint="Breakpoint.MdAndUp" Invert=true>
    <MudButton Color="@Color" Class="@Class" StartIcon="@Icon" Size="@Size" Variant="Variant.Filled" Href="@Href">@ChildContent</MudButton>
</MudHidden>

@code 
{
    [Parameter]
    public string? Icon { get; set; }

    [Parameter]
    public string? Href { get; set; }

    [Parameter]
    public string? Style { get; set; }

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public Color Color { get; set; }

    [Parameter]
    public Size Size { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}