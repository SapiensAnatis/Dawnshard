{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "csharpier",
      "command": "dotnet",
      "args": [
        "csharpier",
        "${staged}"
      ],
      "include": [
        "**/*.cs"
      ]
    }, 
    {
      "name": "prettier",
      "command": "pnpm",
      "args": [
        "exec",
        "prettier",
        "--ignore-unknown",
        "--write",
        "${staged}"
      ],
      "pathMode": "absolute",
      "cwd": "Website/",
      "include": [
        "Website/**/*.svelte",
        "Website/**/*.js",
        "Website/**/*.ts",
        "Website/**/*.json"
      ]
    }
  ]
}
