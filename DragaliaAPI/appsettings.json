{
    "Serilog": {
        "Using": [ "Serilog.Expressions" ],
        "Filter": [
            {
                "Name": "ByExcluding",
                "Args": {
                    "expression": "EndsWith(RequestPath, '/health') and StatusCode=200"
                }
            }
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft.AspNetCore": "Warning",
                "Microsoft.EntityFrameworkCore": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "formatter": {
                        "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
                        "template": "[{@t:yyyy-MM-dd HH:mm:ss} {@l:u3} {Substring(SourceContext, LastIndexOf(SourceContext, '.') + 1)}{#each i in [RequestId, AccountId, ViewerId]}{Concat(' ', i)}{#end}] {@m}\n{@x}"
                    },
                }
            },
            {
                "Name": "File",
                "Args": {
                    "formatter": {
                        "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
                        "template": "[{@t:yyyy-MM-dd HH:mm:ss} {@l:u3} {Substring(SourceContext, LastIndexOf(SourceContext, '.') + 1)}{#each i in [RequestId, AccountId, ViewerId]}{Concat(' ', i)}{#end}] {@m}\n{@x}"
                    },
                    "path": "logs/dragaliaapi_.log",
                    "rollingInterval": "Day",
                    "rollOnFileSizeLimit": true,
                    "fileSizeLimitBytes": 1000000000,
                    "retainedFileCountLimit": 14
                }
            }
        ]
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "RedisHost": "redis",
        "PostgresHost": "postgres"
    },
    "Login": {
        "UseBaasLogin": true
    },
    "Baas": {
        "TokenIssuer": "LukeFZ",
        "TokenAudience": "baas-Id",
        "BaasUrl": "https://baas.lukefz.xyz"
    },
    "Dragalipatch": {
        "Mode": "RAW"
    },
    "HashSalt": "dragalia",
    "Redis": {
        "SessionExpiryTimeMinutes": 60,
        "DungeonExpiryTimeMinutes": 60
    }
}
