@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --background: 0 0% 100%;
    --background-surface: 234 10% 95%;
    --foreground: 0 0% 3.9%;
    --card: 0 0% 100%;
    --card-foreground: 0 0% 3.9%;
    --popover: 0 0% 100%;
    --popover-foreground: 0 0% 3.9%;
    --primary: 221.2 83.2% 53.3%;
    --primary-foreground: 210 40% 98%;
    --secondary: 210 40% 96.1%;
    --secondary-foreground: 222.2 47.4% 11.2%;
    --muted: 210 40% 96.1%;
    --muted-foreground: 215.4 16.3% 46.9%;
    --accent: 210 40% 96.1%;
    --accent-foreground: 222.2 47.4% 11.2%;
    --destructive: 0 72.22% 50.59%;
    --destructive-foreground: 0 0% 98%;
    --border: 0 0% 89.8%;
    --input: 0 0% 89.8%;
    --ring: 215 72.2% 50.6%;
    --radius: 0.5rem;
    --divider: rgba(99 107 116 / 0.2);

    .link {
      @apply text-sky-600;
      @apply underline;
    }
  }
  .dark {
    --background: 0 0% 3.9%;
    --background-surface: 234 9.8% 10%;
    --foreground: 0 0% 94%;
    --card: 0 0% 3.9%;
    --card-foreground: 0 0% 94%;
    --popover: 0 0% 3.9%;
    --popover-foreground: 0 0% 94%;
    --primary: 217.2 91.2% 59.8%;
    --primary-foreground: 222.2 47.4% 11.2%;
    --secondary: 217.2 32.6% 17.5%;
    --secondary-foreground: 210 40% 98%;
    --muted: 217.2 32.6% 17.5%;
    --muted-foreground: 215 20.2% 65.1%;
    --accent: 217.2 32.6% 17.5%;
    --accent-foreground: 210 40% 98%;
    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 0 0% 94%;
    --border: 0 0% 14.9%;
    --input: 0 0% 14.9%;
    --ring: 215 72.2% 50.6%;
    --divider: rgba(159 166 173 / 0.16);

    .link {
      @apply text-sky-400;
    }
  }
}

@layer base {
  * {
    @apply border-border;
    --header-height: 3.5rem;
    --navigation-width: 17rem;
  }
  body {
    @apply bg-background text-foreground;
  }
  select {
    height: 2.5rem;
    background-color: hsl(var(--background));
    padding: 0.5rem;
    @apply rounded-md border border-input text-sm disabled:cursor-not-allowed disabled:opacity-50;
  }
}
